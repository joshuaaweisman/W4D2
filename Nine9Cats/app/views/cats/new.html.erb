<h2>Add a New Cat</h2>

<form action=cats_url method="post">

    <label>
        Name:
        <input type="text" name="cats[name]">
    </label>


    <br><br>

    
    <label>
        Gender:
        <input type="radio" name="cats[sex]" value="M">Male
        <input type="radio" name="cats[sex]" value="F">Female
    </label>


    <br><br>


    <label>
        Color:
        <select name="cats[color]">
            <option disabled selected>-- Pick A Color --</option>
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="green">Green</option>
        </select>
    </label>


    <br><br>


    <label>
        Birth Date:
        <input type="date" name="cats[birth_date]">
    </label>


    <br><br>


    <label>
        Description (Optional):
        <input type="textarea" name="cats[description]">
    </label>


    <br><br>

    
    <input type="submit" value="Add Your Cat!">


</form>